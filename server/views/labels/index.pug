extends ../layouts/application.pug

block header
  = t('layouts.application.labels')

block content
  a.btn.btn-primary.mb-5(href=route('newLabel'))= t('layouts.application.createLabel')
  .table-responsive
    table.table.table-borderless.table-striped.mt-5.bg-white
      thead
        tr
          th= t('views.label.id')
          th= t('views.label.name')
          th= t('views.label.createdAt')
          th= t('views.actions')
      tbody
        each label in labels
          tr
            td= label.id
            td= label.name
            td= formatDate(label.createdAt)
            td
              .d-flex.flex-wrap
                a.btn.btn-primary.me-1(href=`/labels/${label.id}/edit`)= t('views.label.edit.submit')
                +buttonTo(`/labels/${label.id}`, 'delete')(class="btn btn-danger" value=t('views.label.delete.submit'))