extends ../layouts/application.pug

block header
  h1.display-4.fw-bold= t('views.labels.edit.title')

block content
  +formFor()(action=`/labels/${label.id}` method='post')
    +input(label, 'name', errors)(type='text')
    input(name='_method' type='hidden' value='patch')
    +submit(label)(value=t('views.labels.edit.submit'))