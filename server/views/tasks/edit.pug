extends ../layouts/application.pug

block header
  h1.display-4.fw-bold= t('views.tasks.edit.title')

block content
  +formFor()(action=`/tasks/${task.id}` method='post')
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description', errors)(rows='3')
    +select(task, 'statusId', errors, statuses)
    +select(task, 'executorId', errors, users)
    +select(task, 'labels', errors, labels, true, selectedLabel)
    +buttonTo(`/tasks/${task.id}`, 'patch')(class="btn btn-danger" value=t('views.tasks.edit.submit'))